@model IEnumerable<OnlineExamCenter.ModelsVM.QuestionTypeVM>

@{
    ViewBag.Title = "QuestionTypeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="br-pagebody">
    <h6 class="br-section-label">Question Type </h6>
    <div class="br-section-wrapper">
        <div class="row">
            <div class="col-lg">
                <a href="@Url.Action("QuestionTypeSetup", "QuestionBank")" class="btn btn-sm btn-success"><i class="fa fa-plus"></i>New</a>
            </div>
        </div>
        <div class="row">
            <div class="col-6 ">

                <div class="bd bd-white-1 rounded table-responsive">
                    <table class="table table-hover mg-b-0">
                        <thead class="thead-colored thead-primary">
                            <tr>
                                <th>
                                    Module Type
                                </th>
                                <th>
                                    Status
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.TypeName)
                                    </td>
                                    <td style="text-align:center">
                                        @Html.DisplayFor(modelItem => item.StatusName)
                                    </td>
                                    <td style="text-align:center">
                                        <a href='@Url.Action("QuestionTypeDetail", "QuestionBank", new { typeId = item.Id })' title="Edit">
                                            <i class="fa fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

    </div>
</div>