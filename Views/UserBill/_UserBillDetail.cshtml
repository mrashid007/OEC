@model IEnumerable<OnlineExamCenter.ModelsVM.UserBillVM>
<div class="bd bd-white-1 rounded table-responsive mg-t-20">
    <table class="table table-bordered mg-b-0">
        <thead class="thead-colored thead-primary">
            <tr>
                <th>Bill For</th>
                <th>Type</th>
                <th>Domin</th>
                <th>Weight</th>
                <th>Unit</th>
                <th>UnitPrice</th>
                <th>Question Qty</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillFor)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.QuestionType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionDomin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuestionWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfQuestion)
                </td>
                <td style="text-align:right;">
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
            </tr>
            }
            <tr><td colspan="6"></td><td style="background-color:cornflowerblue;border-top:double;color:white; font-weight:bold;">Total:</td><td style="background-color:cornflowerblue;border-top:double;text-align:right;color:white; font-weight:bold;">@ViewBag.GrandTotal</td></tr>
            <tr><td colspan="3">Total Earn: </td> <td colspan="2" style="background-color:cornflowerblue;border-top:double;color:white; font-weight:bold; text-align:right;">@ViewBag.TotalEarn</td><td colspan="3"></td></tr>
            <tr><td colspan="3">Total Withdraw:</td> <td colspan="2" style="background-color:cornflowerblue;border-top:double;color:white; font-weight:bold; text-align:right;">@ViewBag.TotalWithDraw</td><td colspan="3"></td></tr>
            <tr><td colspan="3">Final Balance:</td> <td colspan="2" style="background-color:cornflowerblue;border-top:double;color:white; font-weight:bold; text-align:right;">@ViewBag.Balance</td><td colspan="3"></td></tr>
        </tbody>
    </table>

</div><!-- bd-0 -->