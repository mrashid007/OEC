
@{
    ViewBag.Title = "User Info Verification";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="br-pagebody">
    <h6 class="br-section-label">User Info Verification</h6>
    <div class="br-section-wrapper pd-t-20">
        <div class="row">
            <div class="col-lg mg-t-10 mg-lg-t-0">
                <p style="color:green;font-weight:bolder;">@ViewBag.EmailMsg</p>
            </div>
            <div class="col-lg mg-t-10 mg-lg-t-0">
                <p style="color:green;font-weight:bolder;">@ViewBag.EmailMsg</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg mg-t-10 mg-lg-t-0">
                <h6 class="br-section-label">Email Verify</h6>
                <input type="submit" value="Verify" class="btn btn-info" onclick="VerifyEmail();" />
            </div><!-- col -->
            <div class="col-lg mg-t-10 mg-lg-t-0">
                <h6 class="br-section-label">Phone No Verification</h6>
                <input type="submit" value="Send OTP" class="btn btn-info" onclick="SendPhoneNoVerificationOTP();" />
                <input name="txtOTP" id="txtOTP" type="text" placeholder="One Time Password">
            </div><!-- col -->
        </div><!-- row -->
            </div>
        </div>

<script type="text/javascript">

    $(document).ready(function () {
        $('#txtOTP').hide();
    });

            function VerifyEmail() {
            $.ajax({
                type: "POST",
                url: "@Url.Action("SecurityUserVerifyEmail", "UserSecurity")",
                success: function (data) {
                    toastr.success("Email Verification link sent to your Email");
                },
                error: function (result, textStatus, jqXHR) {

                }
        });
    }

    function SendPhoneNoVerificationOTP() {
        $.ajax({
                type: "POST",
                url: "@Url.Action("SecurityUserVerifyPhoneNo", "UserSecurity")",
                success: function (data) {
                    toastr.success("Verification OTP sent to your phone No.");
                    $('#txtOTP').show();
                },
                error: function (result, textStatus, jqXHR) {

                }
        });
    }

</script>
